@using OSDevGrp.ReduceFoodWaste.WebApplication.Resources
@model OSDevGrp.ReduceFoodWaste.WebApplication.Models.MembershipModel
@{
    ViewBag.Title = string.Format("{0} {1}", Texts.Renew, Texts.Membership.ToLower());
}

@section sidebar {
    @Html.Partial("_Sidebar")
}

<hgroup class="title">
    <h2>@ViewBag.Title</h2>
</hgroup>
@if (string.IsNullOrEmpty(ViewBag.StatusMessage) == false)
{
    <p class="message-success">@ViewBag.StatusMessage</p>
}
@if (string.IsNullOrEmpty(ViewBag.ErrorMessage) == false)
{
    <p class="message-error">@ViewBag.ErrorMessage</p>
}
<hr />
@Html.Partial("_MembershipInformation", Model)