@using OSDevGrp.ReduceFoodWaste.WebApplication.Resources
@model OSDevGrp.ReduceFoodWaste.WebApplication.Models.HouseholdModel

@section featured {
    <section class="featured">
        <div class="content-wrapper">
            <hgroup class="title">
                <h1>@string.Format(Texts.WelcomeTo, Texts.ReduceFoodWasteProject)</h1>
            </hgroup>
            <p>@Texts.TimeToCreateYourFirstHousehold</p>
        </div>
    </section>
}

<div class="row">
    <hgroup class="title">
        <h1>@Texts.CreateHousehold</h1>
    </hgroup>
    @if (string.IsNullOrEmpty(ViewBag.StatusMessage) == false)
    {
        <p class="message-success">@ViewBag.StatusMessage</p>
    }
    @if (string.IsNullOrEmpty(ViewBag.ErrorMessage) == false)
    {
        <p class="message-error">@ViewBag.ErrorMessage</p>
    }
</div>
@using (Html.BeginForm("Create", "HouseholdMember", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.Identifier)
    <div class="row input-group">
        @Html.LabelFor(m => m.Name, Texts.Name)<br />@Html.TextBoxFor(m => m.Name)&nbsp;@Html.ValidationMessageFor(m => m.Name)
    </div>
    <div class="row input-group">
        @Html.LabelFor(m => m.Description, Texts.Description)<br />@Html.TextAreaFor(m => m.Description)&nbsp;@Html.ValidationMessageFor(m => m.Description)
    </div>
    if (Model.PrivacyPolicy != null)
    {
        <div class="row input-group">
            @Html.Partial("_PrivacyPolicies", Model.PrivacyPolicy)
            @Html.CheckBoxFor(m => m.PrivacyPolicy.IsAccepted)&nbsp;@Html.LabelFor(m => m.PrivacyPolicy.IsAccepted, Texts.AcceptTermsAndPrivacyPolicy)&nbsp;@Html.ValidationMessageFor(m => m.PrivacyPolicy.IsAccepted)
        </div>
    }
    <div class="row">
        <input class="float-right" type="submit" value="@Texts.Next" title="@Texts.Next" />
    </div>
}
