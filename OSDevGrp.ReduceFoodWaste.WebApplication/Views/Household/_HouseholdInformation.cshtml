@using OSDevGrp.ReduceFoodWaste.WebApplication.Resources
@model OSDevGrp.ReduceFoodWaste.WebApplication.Models.HouseholdModel

<div id="basicInformation">
    @Html.Partial("_HouseholdBasicInformation", Model)
</div>
<div class="row">
    <h4>@Texts.HouseholdMembers</h4>
    <div id="addHouseholdMember"></div>
    <table class="table table-sm">
        <thead class="table-inverse">
            <tr>
                <th>@Texts.MailAddress</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td style="vertical-align: middle">@Texts.AddHouseholdMemberToHousehold</td>
                <td><a class="btn btn-primary" onclick="@string.Format("parent.addHouseholdMember('{0}')", Model.Identifier)">@Texts.Add</a></td>
            </tr>
            @if (Model.HouseholdMembers != null)
            {
                foreach (var householdMember in Model.HouseholdMembers)
                {
                    <tr>
                        <td style="vertical-align: middle">@householdMember.MailAddress</td>
                        <td></td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>