@using OSDevGrp.ReduceFoodWaste.WebApplication.Resources
@model OSDevGrp.ReduceFoodWaste.WebApplication.Models.HouseholdModel

<div id="basicInformation">
    @Html.Partial("_HouseholdBasicInformation", Model)
</div>
<div class="row">
    <h4>@Texts.HouseholdMembers</h4>
    <div id="addHouseholdMember">
    </div>
    <div class="card-columns">
        @if (Model.HouseholdMembers != null)
        {
            foreach (var householdMember in Model.HouseholdMembers)
            {
                <div class="card">
                    <img class="card-img-top" src="@VirtualPathUtility.ToAbsolute("~/Images/householdMember.png")" />
                    <div class="card-block text-xs-center">
                        <h5 class="card-title">@householdMember.MailAddress</h5>
                    </div>
                </div>
            }
        }
        <div class="card">
            <img class="card-img-top" src="@VirtualPathUtility.ToAbsolute("~/Images/householdMember.png")" />
            <div class="card-block text-xs-center">
                <h5 class="card-title">@Texts.AddHouseholdMemberToHousehold</h5>
                <a class="btn btn-primary" onclick="@string.Format("parent.addHouseholdMember('{0}')", Model.Identifier)">@Texts.Add</a>
            </div>
        </div>
    </div>
</div>