@using OSDevGrp.ReduceFoodWaste.WebApplication.Resources
@model OSDevGrp.ReduceFoodWaste.WebApplication.Models.MemberOfHouseholdModel

@using (Html.BeginForm("AddHouseholdMember", "Household", FormMethod.Post, new {id = "addHouseholdMember"}))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.HouseholdIdentifier)
    <p>@Texts.AddHouseholdMemberToHousehold</p>
    <div class="form-group">
        @Html.LabelFor(m => m.MailAddress, Texts.MailAddress)
        @Html.TextBoxFor(m => m.MailAddress, null, new { @class = "form-control" })
        <div class="text-danger">@Html.ValidationMessageFor(m => m.MailAddress)</div>
    </div>
    <div class="btn-group">
        <input class="btn btn-primary" type="submit" value="@Texts.Add" title="@Texts.Add" />
        <input class="btn btn-primary" type="button" onclick="@string.Format("parent.cancel('{0}')", Model.HouseholdIdentifier)" value="@Texts.Cancel" title="@Texts.Cancel" />
    </div>
    <hr />
}