@using OSDevGrp.ReduceFoodWaste.WebApplication.Resources
@model OSDevGrp.ReduceFoodWaste.WebApplication.Models.HouseholdModel

<table class="table table-sm">
    <tbody>
        <tr>
            <td style="width: 15%" nowrap>@Texts.Name</td>
            @if (ViewBag.EditMode == false)
            {
                <td><strong>@Html.Raw(Model.Name)</strong></td>
            }
            else
            {
                <td>@Html.TextBoxFor(m => m.Name)&nbsp;@Html.ValidationMessageFor(m => m.Name)</td>
            }
        </tr>
        <tr>
            <td style="width: 15%" nowrap>@Texts.Description</td>
            @if (ViewBag.EditMode == false)
            {
                <td><strong>@Html.Raw(Model.Description)</strong></td>
            }
            else
            {
                <td>@Html.TextAreaFor(m => m.Description)&nbsp;@Html.ValidationMessageFor(m => m.Description)</td>
            }
        </tr>
        <tr>
            <td style="width: 15%" nowrap></td>
            @if (ViewBag.EditMode == false)
            {
                <td>
                    <div class="btn-group">
                        <a class="btn btn-primary" onclick="@string.Format("parent.editBasicInformation('{0}')", Model.Identifier)">@Texts.Edit</a>
                    </div>
                </td>
            }
            else
            {
                <td>
                    <div class="btn-group">
                        <input class="btn btn-primary" type="submit" value="@Texts.Update" title="@Texts.Update" />
                        <input class="btn btn-primary" type="button" onclick="@string.Format("parent.cancel('{0}')", Model.Identifier)" value="@Texts.Cancel" title="@Texts.Cancel" />
                    </div>
                </td>
            }
        </tr>
    </tbody>
</table>
